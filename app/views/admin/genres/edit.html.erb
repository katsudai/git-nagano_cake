<div class="container">
  <div class="row">
    <div class="alert alert-info my-3" role="alert">
      <h3>ジャンル編集</h3>
    </div>
  </div>
  <div class="row my-2">
    <div class="col-2 my-3">
      <h4>ジャンル名</h4>
    </div>
    <div class="col-6 my-2">
    <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
      <div class="input-group mb-3">
        <%= f.text_field :name, class: "form-control form-control-lg" %>
        <div class="mx-4">
          <%= f.submit '変更を保存', class: "btn btn-success btn-lg" %>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>

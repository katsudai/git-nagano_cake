<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-6 px-4 px-sm-0 mx-auto text-center">
      <div class="alert alert-info mb-3" role="alert">
        <h3>商品新規登録</h3>
      </div>
      <%= form_with model: @item do |f| %>
      <div class="form-body p-4">
        <div class="row ">
          <div class="col-3">
          　<span>商品名</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_field :name, placeholder: "商品名", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>商品説明</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>ジャンル</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.collection_select :name, @genres, :id, :name, include_blank: "---------ジャンルを選択してください---------", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>税抜価格</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_field :price, placeholder: "1000", class: "form-control form-control-lg" %><span class="col-1 mt-4">円</span>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>販売</br>ステータス</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.select :is_active, {"販売中": "true", "販売不可": "false"},{}, class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "新規登録", class: "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>  
  </div>
</div>

 <div class="row">
  <div class="col">
    <div class="row">
    <%= form_with model: @item do |f| %>

    <div class="col-md-5 col-xs-5">
     <h2>商品新規登録</h2>

      <div class="item-new-form">
        
      </div>
      <div class="product-img" style="margin-top: 20px;">
        
      </div>
    </div>

    <br><br><br>
      <div class="col-md-5 col-md-offset-2 col-xs-5 col-xs-offset-2">
        <table class="new-form-table">
          <tbody>

            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :description, class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td>          <%= f.collection_select :genre_id, Genre.all ,:id, :name, include_blank: "--選択してください--" %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price_without_tax, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_sales_status, [["販売中","false"], ["販売不可","true"]], include_blank: "--選択してください--" %></td>
            </tr>
          </tbody>
        </table>

        <div class="text-right">
        <%= f.submit "新規登録" ,class: "btn btn-primary text-right" %>

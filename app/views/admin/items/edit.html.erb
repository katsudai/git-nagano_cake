<p id="notice"></p>
<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-8 px-4 px-sm-0 mx-auto text-center">
      <div class="alert alert-info mb-3" role="alert">
        <h3>商品編集</h3>
      </div>
      <%= form_with model: @item, url: admin_item_path, method: :PATCH do |f| %>
      <div class="form-body p-4">
        
        <div class="row ">
          <div class="col-3 my-4">
          　<span>商品画像</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.file_field :image, accept: "image/*",  class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row ">
          <div class="col-3">
          　<span>商品名</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_field :name, placeholder: "商品名", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>商品説明</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_area :introduction, placeholder: "ここに説明文を記述します", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>ジャンル</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.collection_select :genre_id, @genres, :id, :name, include_blank: "---------ジャンルを選択してください---------", class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>税抜価格</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.text_field :price, placeholder: "1000", class: "form-control form-control-lg" %><span class="col-1 mt-4">円</span>
            </div>
          </div>
        </div>
        
        <div class="row">
          <div class="col-3 my-4">
          　<span>販売</br>ステータス</span>
          </div>
          <div class="col-9">
            <div class="input-group flex-nowrap my-4">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="far fa-flag"></i></span>
              </div>
              <%= f.select :is_active, {"販売中": "true", "販売不可": "false"},{}, class: "form-control form-control-lg" %>
            </div>
          </div>
        </div>
      </div>
      <div class="text-center">
        <%= f.submit "変更を保存", class: "btn btn-success btn-lg" %>
      </div>
      <% end %>
    </div>  
  </div>
</div>

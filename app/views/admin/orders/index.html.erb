<div class="container">
    
  <div class="row">
    <div class="alert alert-info my-3" role="alert">
      <h3>注文履歴一覧</h3>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-12">
      <table class="table">
        <thead>
          <tr>
            <th scope="col", class="table-info">購入日時</th>
            <th scope="col", class="table-info">購入者</th>
            <th scope="col", class="table-info"></th>
            <th scope="col", class="table-info"></th>
            <th scope="col", class="table-info">注文個数</th>
            <th scope="col", class="table-info">注文ステータス</th>
          </tr>
        </thead>
        <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= link_to order.created_at.strftime('%Y/%m/%d %H:%M'), admin_order_path(order.id), class: "text-decoration-none text-dark border-bottom border-dark" %></td>
            <td>
              <%= order.customer.last_name %>
              <%= order.customer.first_name %>
            </td>
            <td></td>
            <td></td>
            <td>
              <%= order.order_details.all.sum(:amount) %>
              </td>
            <td class="text-success font-weight-bold">
              <%= order.status_i18n %>
            </td>
          </tr>
        <% end %>
        </tbody>
        <%= paginate @orders %>
      </table>
    </div>
  </div>
</div>